          <div class="field">
                <%= f.label :title %><br/>
                <%= f.text_field :title, class:"form-control" %>
           </div>
                      
           </div>

       <div class="row">
               <p>
                <%= f.label :text %><br>
                <%= f.text_area :text, class:"form-control" %>
              </p>
       </div>
