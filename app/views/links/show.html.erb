<head>
  <title>Democratize <%= @city.title %>: Local News, Politics, Discussion, Events</title>
  
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <meta name="description" content="dynamic titles, <%= @city.title %> for each group politics yo!">
</head>
<body>
 <div class="bod">
    <div class="row">  
      <div class="col-xs-2">
        <div id="logo">
          <%= link_to "Democratize!", root_path %>
        </div>
        Back to <%= link_to @city.title, [@city] %>
      </div>  
    
    </div>
    <div class="row">
      <div class="col-xs-2">
        <div id="sidebar">
              
              <div id="sideprof">
                <%# user is logged in, show log out link %>
                <% if current_user.present? %>
                
                <%= image_tag current_user.avatar.url(:main), :class => "img-circle", :size => "100x100" %><br>
                  <%= link_to current_user.username, current_user %><br>
                  <%= link_to 'Sign Out', destroy_user_session_path, :method => :delete %>
                  
                  <%# user is not logged in, show signup and login links %>
                <% else %>
                
                  <li><%= link_to 'Sign In', new_user_session_path %></li>
                  <li><%= link_to 'Register Now!', new_user_registration_path %></li>
                
                <% end %>
                
               <%# if user_signed_in? %>

                <%# end %>
              </div>
              <div id="sidenav">
                <ul class="nav nav-pills nav-stacked">
                  <br>
                      <li><center><b><%= @city.title %> Districts</b></center></a>

                        <% @districts.each do |district| %>
                      <%= link_to district.title, [@city, district], class: "list-group-item" %>
                       <% end %>
                    <br>
                    <center><b><%= link_to @city.title+" Groups", city_groups_path(@city) %></b></center>
                    <% @groups.each do |group| %>
                    <%= link_to group.title, [@city, group], class: "list-group-item" %>
                      <% end %>
                      <br>
                      <center><b><%= @city.title %> Resources</b></center>
                      <% @resources.each do |resource| %>
                    <%= link_to resource.title, "http://#{resource.url}", class: "list-group-item", target: '_blank' %>
                      <% end %>
