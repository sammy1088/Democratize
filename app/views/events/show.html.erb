<head>
  <title>Democratize! Local News, Politics, Discussion, Events</title>
  
   <%= stylesheet_link_tag    "normal/application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
  <%= csrf_meta_tags %>
  <meta name="description" content="dynamic titles, for each group politics yo!">
</head>
<body>
 <div class="bod">
    <div class="row">  
      <div class="col-xs-2">
        <div id="logo">
         <i class="fa fa-bullhorn"></i> <%= link_to "Democratize!", root_path %>
        </div>

        <div id="sidebar">
             
              <div id="sideprof">
                <%# user is logged in, show log out link %>
                <% if current_user.present? %>
                
                
                  <%= link_to current_user.username, current_user %><br>
                  <%= link_to 'Sign Out', destroy_user_session_path, :method => :delete %>
                  
                  <%# user is not logged in, show signup and login links %>
                <% else %>
                
                  <li><%= link_to 'Sign In', new_user_session_path %></li>
                  <li><%= link_to 'Register Now!', new_user_registration_path %></li>
                
                <% end %>
                
              </div>
 <div class="btn-group">
                        <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown">
                          Choose Location
                        <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" role="menu">
                            <li><b><%= link_to "United States", "/" %></a></b></li>
                            <li class="divider"></li>
                          <li><b><%= link_to "Oklahoma", "/states/2-oklahoma" %></a></b></li>
                          <li><%= link_to "Oklahoma City", "/cities/2-oklahomacity" %></a></li>
                          <li><%= link_to "Tulsa", "/cities/1-tulsa" %></a></li>
                        </ul>
                        </div>
      <br><br>
       <center>
         <b>Back to </b><%= link_to @parent.title, [@parent] %>
   </center>
        </div>
  
      </div>
 <div class="row"> 
    <div class="col-xs-8">
      <div class="col-bod">
        
    <div id="linktitleS">
      <%= @event.title %>
    </div>
        <div id="linktext">
    <%= auto_link(@event.description, :all, :target => "_blank").html_safe %><br>
          <b>on</b> <%= @event.date %><br>
          <b>at</b> <%= @event.location %>
      </div>
        <div class="textaux">
  <div class="row">
        <div class="col-xs-12">

   </div>
          
    </div>
</div>
      </div>
      

    <div id="linkcomment">
        <%= form_for([@event, Comment.new]) do |f| %> 
      
          <div class="field">
            
            <%= f.text_area :message, :class => "form-control", :placeholder =>"Add a comment" %>
          </div>
            <div class="actions">
              <%= f.submit :class => "btn btn-primary" %>
            </div>
        <% end %>
    </div>
 
  
   <%= render partial: "commentsshow", locals: { comments: @comments } %> 
        
  </div> 
</div>
</div>
</body>