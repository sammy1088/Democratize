      </div>

<div class="col-xs-8"> 
<%= form_for([@parent, @event]) do |f| %>
  <b>Create New Event</b><br><br>
  <div class="field">
    <%= f.label "Name of event" %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :date %><br />
    <%= f.date_select :date %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :location %><br />
    <%= f.text_area :location %>
