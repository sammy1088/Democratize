<html>
<head>
  <title>Democratize! <%= @state.title %> News, Politics, Discussion, Events</title>
  
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
  <%= favicon_link_tag 'favicon.ico' %>
  <%= csrf_meta_tags %>
  <meta name="description" content="Democratize! <%= @state.title %> local news, politics, and community debate.">
</head>
<body>
  <div class="bod">
    <div class="row">  
      <div class="col-xs-2">
        <div id="logo">
          <center><i class="fa fa-bullhorn"></i> <%= link_to "Democratize!", root_path %>
            <br><em><div id="tag">"a virtual town hall"</div></em></center>
        </div>
        <div id="sidebar">
              
              <div id="sideprof">
                <%# user is logged in, show log out link %>
                <br>
                <% if current_user.present? %>

                <% if current_user.avatar? %>
                <%= image_tag current_user.avatar.url(:main), :class => "img-rounded", :size => "100x100" %>
                <br>
                <% end %>
                <b><%= current_user.username %></b><br>
                  <%= link_to 'Sign Out', destroy_user_session_path, :method => :delete %>
                  
                  <%# user is not logged in, show signup and login links %>
                <% else %>
                
                  <li><%= link_to 'Sign In', new_user_session_path %></li>
                  <li><%= link_to 'Register Now!', new_user_registration_path %></li>
                
                <% end %>
                
               <%# if user_signed_in? %>

                <%# end %>
              </div>
                <div class="btn-group">
                        <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown">
                          Change Location
                        <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" role="menu">
                          <li><b><%= link_to "Oklahoma", "/states/2" %></a></b></li>
                          <li><%= link_to "Oklahoma City", "/cities/2-oklahomacity" %></a></li>
                          <li><%= link_to "Tulsa", "/cities/1-tulsa" %></a></li>
                        </ul>
                        </div>
                        
              <div id="sidenav">
                    
                <ul class="nav nav-pills nav-stacked">
                        
                      <br>
                      <li>
                    <center><b><%= @state.title %> Groups</b></center>
                    <% @groups.each do |group| %>
                    <%= link_to group.title, [@state, group], class: "list-group-item" %>
                      <% end %>
                      <br>
                      <center><b><%= @state.title %> News Sources</b></center>
                      <% @resources.each do |resource| %>
                    <%= link_to resource.title, "http://#{resource.url}", class: "list-group-item", target: '_blank' %>
                      <% end %>
                    
                      </li>
                    </ul>
              </div>
        </div>
      </div>


      <div class="col-xs-8">
         <div class="row">
        <div id="citytitle">
          <h1><%= @state.title %> News and Politics</h1>
          
        </div> 
        </div>
         <div class="row">
          
          <b>upcoming votes</b> <%= link_to "+more votes", state_bills_path(@state), class: 'btn btn-xs btn-success' %><br>
        </div>
     
        <% @bills.order('date ASC').each do |bill| %>

        
        
<div class="row">
             
          
              <b><%= bill.date.strftime("%m/%d") %></b>: <div class="billtitle"><%= bill.title %> </div>
               </div> 
          <div class="row">
<div class="billdesc">
                   <%= bill.description %>
                      </div>    
                    </div> 
                          
               
          

                          <div class="row">
                  <%= link_to "Support", bill_votes_path(bill, :vote => {:up => true}), :method => :link, :class => "btn btn-xs btn-default" %> (<b><%= bill.votes.where(:up => true).count %></b>)
<%= link_to "Oppose", bill_votes_path(bill, :vote => {:up => false}), :method => :link, :class => "btn btn-xs btn-danger" %> (<b><%= bill.votes.where(:up => false).count %></b>)

                       <%= link_to "Debate!", '#', class: 'btn btn-xs btn-primary reply-link', id: 'reply-link' %>
                          <% if bill.comments.count == 1 %>
                      (<b><%= bill.comments.count %> </b> response)
                            <% else %>
                            (<b><%= bill.comments.count %> </b> responses)
                            <% end %>
                          
                      <%= link_to "Link", [@state, bill], class: 'btn btn-xs btn-info' %>
                      <div class="linkpad">
                      </div>
                  <div class="reply-container", id='reply-container'>
                                <%= form_for([bill, Comment.new]) do |f| %> 
                              <div class="field">
                                <%= f.text_area :message, class: "form-control", :placeholder =>"Comments must be at least 5 characters long..." %>
                              </div>
                              <div class="actions">
                                <%= f.submit :class => "btn btn-primary" %>
                              </div>
                                <% end %>
                            
                        
                         <%= render partial: "commentsL", locals: { bill: bill, comments: @comments } %> 
                  </div>
                      

          
          
        </div>

        <% end %>
        <div class="row">
            <div id="filters">
                <b><%= link_to "hot", state_path(@state, sort_by: "hot") %>
                |
                  <%= link_to "new", state_path(@state, sort_by: "new") %></b>
              <div id="addlink">
                    <p>
                      <% if user_signed_in? %>
                      <%= link_to "Post", new_state_link_path(params[:id]), :class => "btn btn-xs btn-primary" %>
                      <% end %>
                    </p>
              </div>
            </div> 
        </div>
                <div class="row">
          <div class="row">
            <% @links.each do |link| %> 
            <ul>                     
            <div id="links">
                <li>
                  <div class="row">
                    <div class="col-xs-1">
                      <div class="votes">
                        <div id="votesup">
                          <% if current_user && current_user.votes.where(:votable_id => link.id, :up => true).present? %>
                          <div class="glyphup">
                          <span class="glyphicon glyphicon-chevron-up"></span>
                          </div>
                            <% else %>
                          <%= link_to link_votes_path(link, :vote => {:up => true}), :method => :link, class: "btn btn-small" do %>
                            <span class="glyphicon glyphicon-chevron-up"></span>
                          <% end %>
                          <% end %>
                        </div>
                        <div id="votesS">
                          <%= link.score %> 
                        </div>
                        <div id="votesdown">  
                            <% if current_user && current_user.votes.where(:votable_id => link.id, :up => false).present? %>
                                <div class="glyphdown">
                                  <span class="glyphicon glyphicon-chevron-down"></span>
                                </div>  
                            <% else %>
                          <%= link_to link_votes_path(link, :vote => {:up => false}), :method => :link, class: "btn btn-small" do %>
                            <span class="glyphicon glyphicon-chevron-down"></span>
                          <% end %>
                          <% end %>
                        </div>  
                      </div>
                    </div>  
                    <div class="col-xs-10">
                      <div class="row">
                        <div class="linkbody">
                            <%= link.title %>
                         
                          <%= link_to "+read more", '#', class: 'btn btn-xs btn-success reply-link', id: 'reply-link' %>
                          
                  <div class="reply-container", id='reply-container'>
                    <%= auto_link(link.text, :all, :target => "_blank").html_safe %>
                          
                       </div>
                     
                        </div>                      
                      <div class="row">
                        <div class="col-xs-10">
                          <div id="linkauth">
                            posted <b><%= time_ago_in_words(link.created_at) %></b> ago
                              by
                            <% if link.user.avatar? %><%= image_tag link.user.avatar.url(:main), :class => "img-rounded", :size => "25x25" %><% end %> 
                             
                            <b><%= link.username %></b> <% if link.user.bio? %><em><%= link.user.bio %></em><% end %>                           
</div>
                        </div>
                      </div>
                      
                      
                        <div class="col-xs-10"> 
                          <div class="row">
                     
                       <%= link_to "Debate!", '#', class: 'btn btn-xs btn-primary reply-link', id: 'reply-link' %>
                          <% if link.comments.count == 1 %>
                      (<b><%= link.comments.count %> </b> response)
                            <% else %>
                            (<b><%= link.comments.count %> </b> responses)
                            <% end %>
                          
                      <%= link_to "Link", [@state, link], class: 'btn btn-xs btn-info' %>
                      <div class="linkpad">
                      </div>
                  <div class="reply-container", id='reply-container'>
                                <%= form_for([link, Comment.new]) do |f| %> 
                              <div class="field">
                                <%= f.text_area :message, class: "form-control", :placeholder =>"Comments must be at least 5 characters long..." %>
                              </div>
                              <div class="actions">
                                <%= f.submit :class => "btn btn-primary" %>
                              </div>
                                <% end %>
                            
                        
                         <%= render partial: "comments", locals: { link: link, comments: @comments } %> 
                  </div>
                        </div>
                    </div> 
                    </div>
                      
                      
                 
                 
                </li>   
            </div>
            </ul> 
            <% end %> 
          </div>
          <div class="row">
            <div id="paginate">
            <%= will_paginate @links %> 
            </div>
            <br>
            <div id="footabout">
              
              <%= link_to "Contact", "mailto:democratizellc@gmail.com" %>
              </div>
            <div id="footabout">
            <%= link_to "Advertise!", "/pages/ads" %>
              </div>
            <div id="footcontact">
              <%= link_to "About", "/pages/show" %> 
            </div>
          </div>
        
</div>
          </div>

     

<!-- beg of right -->
       <div class="col-xs-2"> 
                <div id="meetups">
  <h2><%= @state.title %> Events</h2>
                    <% @events.order('date ASC').each do |event| %>

 
          <p><%= link_to event.title, state_events_path(@state) %><br><b>on</b> <%= event.date.strftime("%m/%d/%Y") %></p>
              
    
                      <% end %>
          <%= link_to "+more events", state_events_path(@state), class: 'btn btn-xs btn-success' %>
      </div>

        <div id="policy">
          <h2><%= @state.title %> Jobs</h2>
          
                      <% @jobs.order('created_at DESC').each do |job| %>
          <p><%= link_to job.title, state_jobs_path(@state) %></p>
                      <% end %>
          <%= link_to "+more jobs", state_jobs_path(@state), class: 'btn btn-xs btn-success' %>
          <br>

          <h2>Policy</h2>
          <p>All posts must be civil. Anything hateful, sexist, racist, abusive, threatening, etc. will be removed.</p>
     <%= link_to "Advertise!", "/pages/ads", class: 'btn btn-xs btn-primary' %>
        </div>
        
    </div>
<!-- end of right -->


        </div>
</div>
</div>
</body>

</html>
