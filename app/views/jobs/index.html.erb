
<head>
  <title>Democratize <%= @city.title %>: Local News, Politics, Discussion, Events</title>
  
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
  <%= csrf_meta_tags %>
  <meta name="description" content="dynamic titles, <%= @city.title %> for each group politics yo!">
</head>
<body>

<div class="bod">
    <div class="row">  
      <div class="col-xs-2">
        <div id="logo">
         <i class="fa fa-bullhorn"></i> <%= link_to "Democratize!", root_path %>
        </div>
        
      </div>  
      <div class="col-xs-8">
        <div id="citytitle">
          <h1><%= link_to @city.title, [@city] %> Job Board</h1>
        </div>  
      </div> 
      <div class="col-xs-2"> 
            
      </div>
    </div>
    <div class="row">
      <div class="col-xs-2">
        <div id="sidebar">
             
              <div id="sideprof">
                <%# user is logged in, show log out link %>
                <% if current_user.present? %>
                
                <%= image_tag current_user.avatar.url(:main), :class => "img-rounded", :size => "100x100" %><br>
                  <%= link_to current_user.username, current_user %><br>
                  <%= link_to 'Sign Out', destroy_user_session_path, :method => :delete %>
                  
                  <%# user is not logged in, show signup and login links %>
                <% else %>
                
                  <li><%= link_to 'Sign In', new_user_session_path %></li>
                  <li><%= link_to 'Register Now!', new_user_registration_path %></li>
                
                <% end %>
                
               <%# if user_signed_in? %>

                <%# end %>
              </div>
  <div class="btn-group">
                        <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown">
                          Change Location
                        <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" role="menu">
                          <li><%= link_to "Tulsa", "/cities/1-tulsa" %></a></li>
                          <li><%= link_to "Oklahoma City", "/cities/2-oklahomacity" %></a></li>
                        </ul>
                        </div>
              <div id="sidenav">
                <ul class="nav nav-pills nav-stacked">
                  <br>
                      <li><center><b><%= @city.title %> Districts</b></center></a>

                        <% @districts.each do |district| %>
                      <%= link_to district.title, [@city, district], class: "list-group-item" %>
                       <% end %>
                    <br>
                    <center><b><%= @city.title %> Groups</b></center>
                    <% @groups.each do |group| %>
                    <%= link_to group.title, [@city, group], class: "list-group-item" %>
                      <% end %>
                      <br>
                      <center><b><%= @city.title %> Resources</b></center>
                      <% @resources.each do |resource| %>
                    <%= link_to resource.title, "http://#{resource.url}", class: "list-group-item", target: '_blank' %>
                      <% end %>
                      <br>
                   
                      </li>
                    </ul>
              </div>
        </div>
      </div>

      <div class="col-xs-8">
        <div class="row">
              <div id="addlink">
              <p>
                <% if user_signed_in? %>
                <%= link_to "Post", new_city_job_path(@city, @job) %>
                <% end %>
              </p>
              </div>
      </div>
<div class="row">

  <% @jobs.each do |job| %>

    <ul>
<div id="links">
  <li>

   
    <b><%= job.title %></b> <%= link_to "+read more", '#', class: 'btn btn-xs btn-success reply-link', id: 'reply-link' %><br>
   
   
                  <div class="reply-container", id='reply-container'>
                     <p><%= job.description %></p>

  <p><%= job.companyname %></p>

   <p><%= job.companyurl %></p>

                          </div>
 posted <b><%= time_ago_in_words(job.created_at) %></b> ago
  
    </li>
      </div>
    </ul>


    <% end %>
  <div class="row">
            <div id="paginate">
            <%= will_paginate @jobs %> 
            </div>
            <br>
            <div id="footlinks">
              <%= link_to "About", "/pages/show" %>  
              <%= link_to "Contact", "mailto:democratizellc@gmail.com" %>
            </div>
          </div>
        </div>     
      </div> 

      <div class="col-xs-2"> 
        <div id="meetups">
          <p><%= link_to "Tulsa City Council Meetings", "http://www.tulsacouncil.org/about-uspublications/meetings.aspx", target: '_blank' %></p>
          <p><%= link_to "Republican Party", "http://tulsagop.org/calendar-4/", target: '_blank' %></p>
          <p><%= link_to "Democratic Party", "http://tulsacountydemocrats.org/communications/calendar", target: '_blank' %></p>
          <p><%= link_to "Tulsa Young Professionals(TYPRO'S)", "http://www.typros.org/events.asp?id=776", target: '_blank' %></p>
          <%= link_to "+more events", city_jobs_path(@city), class: 'btn btn-xs btn-success' %>
      </div>
        <div id="policy">
          <h2><%= @city.title %> Jobs</h2>
          
                      <% @jobs.order('created_at DESC').each do |job| %>
          <p><%= link_to job.title, [@city, job] %></p>
                      <% end %>
          <%= link_to "+more jobs", city_jobs_path(@city), class: 'btn btn-xs btn-success' %>
        </div>
<div id="ads">
              
          </div>          
    </div>  
    </div>
  </div>
</div>